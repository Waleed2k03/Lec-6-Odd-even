#include <iostream>
using namespace std;
int main()
{
	cout << "Enter the number to check whether the number is even or odd\n";
	int number;
	cin >> number;
	if (number % 2 == 0)
	{
		cout << "\nThe number entered is even\n";
	}
	else if (number % 2 != 0)
	{
		cout << "The number entered is odd";
	}
	else
	{
		cout << "incorrect";
	}
}
